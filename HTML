    <script>
        // Mobile Navigation Toggle
        const hamburger = document.querySelector('.hamburger');
        const navLinks = document.querySelector('.nav-links');
        
        hamburger.addEventListener('click', () => {
            navLinks.classList.toggle('active');
            hamburger.classList.toggle('active');
        });
        
        // Filter Destinations
        const filterBtns = document.querySelectorAll('.filter-btn');
        const destinationCards = document.querySelectorAll('.card');
        
        filterBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                // Remove active class from all buttons
                filterBtns.forEach(btn => btn.classList.remove('active'));
                
                // Add active class to clicked button
                btn.classList.add('active');
                
                const filter = btn.getAttribute('data-filter');
                
                destinationCards.forEach(card => {
                    if (filter === 'all' || card.getAttribute('data-category') === filter) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });

        // Modal Functionality
        const modal = document.querySelector('.modal');
        const modalTitle = document.getElementById('modal-title');
        const modalImage = document.getElementById('modal-image');
        const modalDesc = document.getElementById('modal-description');
        const modalBestTime = document.getElementById('modal-best-time');
        const modalFamousFor = document.getElementById('modal-famous-for');
        const closeModal = document.querySelector('.close-modal');
        const detailBtns = document.querySelectorAll('.view-details');
        
        // Destination details
        const destinationDetails = {
            "Taj Mahal, Agra": {
                description: "The Taj Mahal is an ivory-white marble mausoleum on the southern bank of the river Yamuna in the Indian city of Agra. It was commissioned in 1632 by the Mughal emperor Shah Jahan to house the tomb of his favorite wife, Mumtaz Mahal.",
                bestTime: "October to March",
                famousFor: "Architecture, Marble craftsmanship, Love story",
                imageClass: "taj-mahal"
            },
            "Beaches of Goa": {
                description: "Goa features a 125km coastline dotted with beautiful beaches. From the bustling Baga and Calangute to the serene Palolem and Agonda, Goa's beaches offer everything from water sports and beachside clubs to peaceful retreats.",
                bestTime: "November to February",
                famousFor: "Beaches, Nightlife, Water sports, Portuguese architecture",
                imageClass: "goa"
            },
            "Leh-Ladakh": {
                description: "Ladakh is a region administered by India as a union territory and constitutes a part of the larger Kashmir region. Ladakh is known for its remote mountain beauty, Buddhist culture, and adventurous terrain.",
                bestTime: "June to September",
                famousFor: "Monasteries, High mountain passes, Pangong Lake, Magnetic Hill",
                imageClass: "ladakh"
            },
            "Varanasi": {
                description: "Varanasi, also known as Benares or Kashi, is one of the oldest continuously inhabited cities in the world. Situated on the banks of the Ganges River, it's considered the spiritual capital of India.",
                bestTime: "October to March",
                famousFor: "Ghats, Evening Ganga Aarti, Spirituality, Ancient temples",
                imageClass: "varanasi"
            },
            "Jaipur": {
                description: "Jaipur is the capital of India's Rajasthan state. It's known as the 'Pink City' due to the distinctive color of its buildings. The city was founded in 1727 by Maharaja Sawai Jai Singh II, the ruler of Amber.",
                bestTime: "October to March",
                famousFor: "Hawa Mahal, City Palace, Amber Fort, Craft markets",
                imageClass: "jaipur"
            },
            "Darjeeling": {
                description: "Darjeeling is a town in India's West Bengal state, in the Himalayan foothills. Once a summer resort for the British Raj elite, it remains the terminus of the narrow-gauge Darjeeling Himalayan Railway, completed in 1881.",
                bestTime: "March to May, September to November",
                famousFor: "Tea plantations, Toy Train, Tiger Hill sunrise, Kanchenjunga views",
                imageClass: "darjeeling"
            },
            "Andaman Islands": {
                description: "The Andaman Islands are an Indian archipelago in the Bay of Bengal. These roughly 300 islands are known for their palm-lined, white-sand beaches, mangroves and tropical rainforests.",
                bestTime: "November to May",
                famousFor: "Radhanagar Beach, Scuba diving, Cellular Jail, Marine life",
                imageClass: "andaman"
            },
            "Rishikesh": {
                description: "Rishikesh is a city in India's northern state of Uttarakhand, in the Himalayan foothills beside the Ganges River. The river is considered holy, and the city is renowned as a center for studying yoga and meditation.",
                bestTime: "September to November, February to March",
                famousFor: "Yoga, River rafting, Beatles Ashram, Laxman Jhula",
                imageClass: "rishikesh"
            }
        };
        
        detailBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const card = btn.closest('.card');
                const title = card.querySelector('h3').textContent;
                const details = destinationDetails[title];
                
                modalTitle.textContent = title;
                modalDesc.textContent = details.description;
                modalBestTime.textContent = details.bestTime;
                modalFamousFor.textContent = details.famousFor;
                modalImage.className = "modal-image " + details.imageClass;
                
                modal.style.display = 'flex';
            });
        });
        
        closeModal.addEventListener('click', () => {
            modal.style.display = 'none';
        });
        
        window.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.style.display = 'none';
            }
        });
        
        // Form Submission
        const contactForm = document.getElementById('contact-form');
        
        contactForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const destination = document.getElementById('destination').value;
            const message = document.getElementById('message').value;
            
            // In a real implementation, you would send this data to a server
            alert(`Thank you, ${name}! Your inquiry about ${destination} has been received. We'll contact you at ${email} soon.`);
            
            contactForm.reset();
        });

        // Smooth Scrolling for Navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                window.scrollTo({
                    top: targetElement.offsetTop - 70,
                    behavior: 'smooth'
                });
                
                // Close mobile menu if open
                navLinks.classList.remove('active');
                hamburger.classList.remove('active');
            });
        });
        
        // Change active navigation link on scroll
        window.addEventListener('scroll', () => {
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('.nav-links a');
            
            let currentSection = '';
            
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                const sectionHeight = section.clientHeight;
                
                if (pageYOffset >= (sectionTop - 100)) {
                    currentSection = section.getAttribute('id');
                }
            });
            
            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === `#${currentSection}`) {
                    link.classList.add('active');
                }
            });
        });
    </script>
</body>
